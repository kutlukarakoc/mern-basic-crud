{
    "version": 2,
    "builds": [
      {
        "src": ".api/index.js",
        "use": "@vercel/node",
        "config": {
          "functions": {
            "controllers/*.js": { "maxDuration": 60 }
          }
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/api" }
    ]
  }